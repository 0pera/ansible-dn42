[Unit]
Description=BIRD Looking-Glass web server
#After=apache2.service

[Service]
Type=simple
User=bird
Group=bird

ProtectSystem=strict
NoNewPrivileges=yes
ProtectControlGroups=yes
PrivateTmp=yes
PrivateDevices=yes
DevicePolicy=closed
MemoryDenyWriteExecute=yes
ProtectHome=true

ReadWritePaths={{ bird_logs_dir }}
WorkingDirectory={{ birdlg_src_dir }}
ExecStart={{ birdlg_venv_dir }}/bin/gunicorn --bind {{ ownip }}:{{ birdlg_web_port }} --bind 127.0.0.1:{{ birdlg_web_port }} --bind [::1]:{{ birdlg_web_port }} lg:app
Restart=on-failure

[Install]
WantedBy=multi-user.target
