{% set rtrname = dns_auto_host_record_format | replace("%s", inventory_hostname) %}

# dn42 splash
server {
    listen 80;
    listen [::]:80;
    server_name {{ dns_domain }};
    server_name *.{{ dns_domain }};
    server_name 172.23.0.53;
{# Listen on all dummy interfaces #}
{% for iface, options in dummy_interfaces.items() %}
{% for ip in options.ip4 + options.ip6 %}
    server_name {{ ip | ipaddr('address') | ipwrap }};
{% endfor %}
{% endfor %}

	location /connectionInfo {
		keepalive_requests 0;
		default_type text/plain;
		return 200 "$remote_addr (you) â†” $server_addr (me)";
	}

    location = /smokeping/ {
        allow  10.0.0.0/8;
        allow  172.20.0.0/14;
        allow  172.31.0.0/16;
        allow  fd00::/8;
        deny   all;
        fastcgi_pass unix:/run/smokeping-fcgi.sock;
        include /etc/nginx/fastcgi_params;
    }

    location /smokeping/ {
        alias /usr/share/smokeping/www/;
        index smokeping.cgi;
    }

    location /routestats/ {
        alias {{ automation_root_dir }}/routestats/;
        index index.html;
        expires 5m;
    }

    location / {
        root {{ automation_root_dir }}/splash;
        index index-dn42.html;
    }
}
