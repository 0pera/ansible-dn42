area 0 {
    # Generated by Ansible
{% for host in igp_neighbours[inventory_hostname] %}
    interface "igp-{{ host }}" {
        cost
        include "{{ automation_root_dir }}/igpping/rxcost/{{ hostvars[host]['ansible_host'] }}.conf";;
        type ptp;
    };
{% endfor %}
{% for entry in stub_ifnames + stub_ifnames_append|default([]) %}
    interface "{{ entry }}" {
        stub on;
    };
{% endfor %}
};
